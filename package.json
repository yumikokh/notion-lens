{
  "name": "notion-lens",
  "version": "1.0.2",
  "description": "A simple CLI tool and TypeScript library for summarizing and reflecting on your Notion daily journal entries using OpenAI API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "node -r ts-node/register --env-file=.env",
    "build": "tsc",
    "prepare": "npm run build",
    "test": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint --fix"
  },
  "bin": {
    "notion-lens": "bin/index"
  },
  "keywords": [
    "notion",
    "openai",
    "cli",
    "typescript"
  ],
  "author": "Yumiko Kokubu",
  "license": "MIT",
  "dependencies": {
    "@commander-js/extra-typings": "^12.1.0",
    "@notionhq/client": "^2.2.15",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "notion-to-md": "^3.1.1",
    "openai": "^4.50.0",
    "ts-pattern": "^5.2.0",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/eslint": "^9.6.1",
    "@types/node": "^20.14.11",
    "@types/validator": "^13.12.2",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.7.0",
    "vitest": "^2.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yumikokh/notion-lens.git"
  },
  "bugs": {
    "url": "https://github.com/yumikokh/notion-lens/issues"
  },
  "homepage": "https://github.com/yumikokh/notion-lens#readme"
}
